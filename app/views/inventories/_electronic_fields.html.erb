<div class="form-group col-sm-12 book-hide appliance-show computation-show furniture-hide device-show computer-show select-a-type-hide">
  <div class="form-group col-sm-6">
    <%= form.label :model, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.text_field :model, class: "form-control", id: "inventory_model" %>
    </div>
  </div>
  <div class="form-group col-sm-6">
    <%= form.label :serie, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.text_field :serie, class: "form-control", id: "number_of_serie" %>
    </div>
  </div>
</div>


<div class="form-group col-sm-12 ">
  <div class="form-group col-sm-6 book-hide appliance-hide computation-hide furniture-hide device-show computer-show select-a-type-hide">
    <%= form.label :operating_system_id, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.collection_select :operating_system_id, [], :id,:name, {prompt: '- Select a Operating System -'}, class: "form-control", id: "operating_system_id", data: {value: @inventory.operating_system_id} %>
    </div>
  </div>
  <div class="form-group col-sm-6 book-hide appliance-hide computation-hide furniture-hide device-hide computer-show select-a-type-hide">
    <%= form.label :hdd, "HDD", class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.text_field :hdd, class: "form-control validate[integer]" %>
    </div>
  </div>
  <div class="form-group col-sm-6 book-hide appliance-hide computation-hide furniture-hide device-show computer-hide select-a-type-hide">
    <%= form.label :storage, "Capacity", class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.text_field :storage, class: "form-control validate[integer]" %>
    </div>
  </div>
</div>