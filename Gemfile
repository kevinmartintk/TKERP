# Authorization solution for Rails which is decoupled from user roles.
gem 'cancancan', '~> 1.10'

# FriendlyId lets you create pretty URLs and work with human-friendly strings as if they were numeric ids.
gem 'friendly_id', '~> 5.1.0'

# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '0.4.1', group: :doc

# We can add a datepicker with this gem
gem 'bootstrap-datepicker-rails'

# We can use this gem to make a field 'autocompletable'
